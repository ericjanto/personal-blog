{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2020.string",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "compileOnSave": true,
  "allowJS": true,
  "include": ["src/**/*"]
}
